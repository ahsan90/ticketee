<div class="container">
    <table class="table table-hover table-condensed table-responsive">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
      <% @users.each do |user| %>
          <tr>
            <td><%=link_to user.name, user_path(user) %></td>
            <td><%= user.email%></td>
            <td><%= link_to "Edit Profile", edit_user_path(user),class: "btn btn-success"%>
              <%= link_to "Delete User", user ,class:"btn btn-danger", method: :delete,
                          data: { confirm: "Are you sure you want to delete this ticket?"} %>
            </td>
          </tr>
      <% end %>
    </table>
</div>